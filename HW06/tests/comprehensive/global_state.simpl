Number attempt_num = 0

Number run_away()
{
    if 0 == attempt_num
    {
        Text message = 'Don\'t go yet!'
        attempt_num = 1 + attempt_num
        return message
    }
    if attempt_num == 1
    {
        Text message = 'Give it two more tries!'
        attempt_num = 1 + attempt_num
        return message
    }
    if attempt_num == 2
    {
        Text message = 'Give it one more try!'
        attempt_num = attempt_num + 1
        return message
    }
    elif attempt_num / 2 == 10
    {
        attempt_num = 1 + attempt_num
    }
    else
    {
        Text message = 'Alright, run away!'
        attempt_num += 1
        return message
    }
}

